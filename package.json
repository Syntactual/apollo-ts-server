{
  "name": "apollo-ts-server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('You must use Yarn to install, not NPM')\"",
    "start:prod": "yarn build && node ./build/index.js",
    "predev": "yarn generate",
    "start:dev": "nodemon src/index.ts",
    "build": "yarn generate && rimraf ./build && tsc",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "generate": "graphql-codegen --config codegen.yml"
  },
  "repository": "git@github.com:Syntactual/apollo-ts-server.git",
  "license": "MIT",
  "devDependencies": {
    "@graphql-codegen/cli": "1.13.3",
    "@graphql-codegen/introspection": "1.13.3",
    "@graphql-codegen/typescript": "^1.13.3",
    "@graphql-codegen/typescript-resolvers": "1.13.3",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "jest": "^25.3.0",
    "nodemon": "^2.0.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "apollo-server": "^2.25.3",
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "graphql": "^15.0.0",
    "graphql-import": "^1.0.2"
  }
}
